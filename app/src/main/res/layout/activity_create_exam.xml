<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context="fr.nevechris.scheduleplanner.activity.MainActivity">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="fr.nevechris.scheduleplanner.activity.MainActivity">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/createExam_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <Button
                    android:id="@+id/createExam_Save_Button"
                    android:background="@color/caldroid_transparent"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Create" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:id="@+id/layout_create_exam"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <LinearLayout
                    android:id="@+id/createExam_Title_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_title"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_Title_EditText"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_Description_Layout"
                    android:layout_below="@id/createExam_Title_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_description"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_Description_EditText"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_Subject_Layout"
                    android:layout_below="@id/createExam_Description_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:layout_editor_absoluteY="25dp"
                    tools:layout_editor_absoluteX="8dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_subject"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic"/>
                    <EditText
                        android:id="@+id/createExam_Subject_EditText"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic"
                        tools:layout_editor_absoluteY="25dp"
                        tools:layout_editor_absoluteX="0dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_Date_Layout"
                    android:layout_below="@id/createExam_Subject_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="Date"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_Date_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_TeacherName_Layout"
                    android:layout_below="@id/createExam_Date_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_teacher_name"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_TeacherName_EditText"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_Difficulty_Layout"
                    android:layout_below="@id/createExam_TeacherName_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_difficulty"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_Difficulty_EditText"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_Place_Layout"
                    android:layout_below="@id/createExam_Difficulty_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_place"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_Place_EditText"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_Notes_Layout"
                    android:layout_below="@id/createExam_Place_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_notes"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_Notes_EditText"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:lines="5"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createExam_Grade_Layout"
                    android:layout_below="@id/createExam_Notes_Layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_height="60dp"
                        android:layout_width="wrap_content"
                        android:text="@string/exam_grade"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                    <EditText
                        android:id="@+id/createExam_Grade_EditText"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/form_text_size"
                        android:textStyle="italic" />
                </LinearLayout>
            </RelativeLayout>
        <!--</ScrollView>-->


        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ListView android:layout_height="match_parent"
                android:layout_width="match_parent">

            </ListView>
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />


</android.support.v4.widget.DrawerLayout>
